<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/single_item_practise_title"
        style="@style/viewpager_payment_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:enabled="false"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:inputType="text"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/practise_select_date"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_baseline_date_range_24"
            />

        <EditText
            android:id="@+id/single_item_practise_date"
            style="@style/viewpager_payment_item"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="11"
            android:inputType="text"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>