<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewpager.Info"
    android:padding="25dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >


    <TextView
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student info"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_name"
        style="@style/viewpager_info_title"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_name_example"
        style="@style/viewpager_info_field"
        android:ems="15"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_phone"
        style="@style/viewpager_info_title"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_phone_example"
        style="@style/viewpager_info_field"
        android:ems="15"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_address"
        style="@style/viewpager_info_title"
        />

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_address_street_example"
        style="@style/viewpager_info_field"
        android:ems="15"
        android:backgroundTint="#ffffff"
        />

    <EditText
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_address_post_example"
        style="@style/viewpager_info_field"
        android:ems="15"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_cpr"
        style="@style/viewpager_info_title"
        />

    <EditText
        android:id="@+id/cpr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_cpr_example"
        style="@style/viewpager_info_field"
        android:ems="15"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/student_edit_button"
        android:textAllCaps="false"
        style="@style/button"
        android:background="@drawable/ic_main_button"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textAllCaps="false"
        android:background="@drawable/ic_main_button"
        style="@style/button"
        />

</LinearLayout>