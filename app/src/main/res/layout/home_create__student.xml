<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.Create_Student"
    android:gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student_create"
        style="@style/title"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/student_name"
        style="@style/field"
        android:autofillHints=""
        android:inputType="text"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/student_phone"
        style="@style/field"
        android:inputType="number"
        android:autofillHints="" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/student_address"
        style="@style/field"
        android:inputType="textPostalAddress"
        android:autofillHints="" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/student_cpr"
        style="@style/field"
        android:inputType="number"
        android:autofillHints="" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/student_price"
        style="@style/field"
        android:clickable="false"
        android:textIsSelectable="false"
        android:inputType="number"
        android:autofillHints="" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/payment_discount"
        style="@style/field"
        android:inputType="number"
        android:autofillHints="" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/student_create_button"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        />


</LinearLayout>