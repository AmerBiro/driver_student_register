<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DriverStudentRegister" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>

    </style>


    <style name="app_title">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="status">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/subtitle</item>
    </style>

    <style name="title">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="field">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/title</item>
        <item name="android:ems">10</item>
    </style>

    <style name="button">
        <item name="backgroundColor">#2F80ED</item>
    </style>

    <style name="forgot_password">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/forgot_password</item>
    </style>

    <style name="item">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/subtitle</item>
    </style>

    <style name="viewpager_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/title</item>
    </style>



</resources>